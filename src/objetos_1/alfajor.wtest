import golosinas.*

describe "test de alfajor"{
	
	var golosina= new Alfajor()

	test "peso inicial"{ assert.equals(300, golosina.peso())}
	
	test "precio"{ assert.equals(12, golosina.precio()) }

	test "gusto"{assert.equals("chocolate", golosina.gusto()) }
	
	test "mordisco"{
		golosina.mordisco()
		assert.equals(240, golosina.peso())
		golosina.mordisco()
		assert.equals(192, golosina.peso())
	}
	
	test "no libre de gluten"{
		assert.that(not golosina.libreGluten())
	}
}